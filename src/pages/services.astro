---
import Layout from "../layouts/Layout.astro";
import IdGenerator from "../components/Tools/IdGenerator";
import AssetCalculator from "../components/Tools/AssetCalculator";
---

<Layout title="Services | Project 51">
    <div class="min-h-screen py-20 px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl font-bold text-white mb-6">Citizen Services</h1>
            <p class="text-slate-400 mb-12">
                Tools for the transitional period. Get your digital paperwork in
                order.
            </p>

            <div class="flex flex-col gap-20">
                <!-- ID Generator Section -->
                <section class="w-full">
                    <div class="mb-8 text-left border-b border-slate-700 pb-4">
                        <h2
                            class="text-2xl font-bold text-white flex items-center gap-3"
                        >
                            <span
                                class="bg-liberation-blue text-white w-8 h-8 rounded-full flex items-center justify-center text-sm font-mono"
                                >01</span
                            >
                            Provisional ID Issuance
                        </h2>
                        <p class="text-slate-400 mt-2 ml-11">
                            Generate your temporary identification for the
                            transition authority.
                        </p>
                    </div>
                    <div class="w-full">
                        <IdGenerator client:only="react" />
                    </div>
                </section>

                <!-- Asset Calculator Section -->
                <section class="w-full">
                    <div class="mb-8 text-left border-b border-slate-700 pb-4">
                        <h2
                            class="text-2xl font-bold text-white flex items-center gap-3"
                        >
                            <span
                                class="bg-green-600 text-white w-8 h-8 rounded-full flex items-center justify-center text-sm font-mono"
                                >02</span
                            >
                            Asset Re-evaluation
                        </h2>
                        <p class="text-slate-400 mt-2 ml-11">
                            Estimate your net worth adjustment under the new
                            economic zone policies.
                        </p>
                    </div>
                    <div class="w-full max-w-2xl mx-auto">
                        <AssetCalculator client:only="react" />
                    </div>
                </section>
            </div>
        </div>
    </div>
</Layout>
