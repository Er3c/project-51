---
import Layout from "../layouts/Layout.astro";
import IdGenerator from "../components/Tools/IdGenerator";
import AssetCalculator from "../components/Tools/AssetCalculator";
---

<Layout title="Services | Project 51">
    <div class="min-h-screen bg-slate-900">
        <!-- Hero Section -->
        <div
            class="relative bg-gradient-to-b from-slate-800 via-slate-900 to-slate-900 py-16 md:py-20"
        >
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/30 mb-6 animate-fade-in"
                >
                    <span
                        class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                    ></span>
                    <span
                        class="text-sm font-mono text-green-400 tracking-wider uppercase"
                        >Transitional Services Active</span
                    >
                </div>

                <h1
                    class="text-4xl md:text-6xl font-black text-white mb-6 leading-tight"
                >
                    Citizen <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-emerald-400"
                        >Services</span
                    >
                </h1>

                <p class="text-xl text-slate-400 max-w-3xl mx-auto mb-4">
                    Prepare for the transition. Access essential tools to
                    facilitate your journey into the 51st state.
                </p>

                <div
                    class="flex items-center justify-center gap-6 text-sm text-slate-500 font-mono mt-8"
                >
                    <div class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-green-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                            ></path>
                        </svg>
                        <span>Secure</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-green-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        <span>Instant</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg
                            class="w-4 h-4 text-green-400"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                            ></path>
                        </svg>
                        <span>Private</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Services Grid -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <div class="grid grid-cols-1 gap-16">
                <!-- ID Generator Section -->
                <section class="relative">
                    <div
                        class="absolute -left-4 top-0 bottom-0 w-1 bg-gradient-to-b from-liberation-blue to-transparent rounded-full"
                    >
                    </div>

                    <div
                        class="bg-slate-800/30 border border-slate-700 rounded-2xl overflow-hidden hover:border-liberation-blue/50 transition-all"
                    >
                        <div
                            class="bg-gradient-to-r from-liberation-blue/10 to-transparent p-6 md:p-8 border-b border-slate-700"
                        >
                            <div
                                class="flex items-start justify-between flex-wrap gap-4"
                            >
                                <div>
                                    <div class="flex items-center gap-3 mb-3">
                                        <span
                                            class="bg-liberation-blue text-white w-10 h-10 rounded-lg flex items-center justify-center text-lg font-bold font-mono shadow-lg"
                                        >
                                            01
                                        </span>
                                        <h2
                                            class="text-3xl font-bold text-white"
                                        >
                                            Digital ID Generator
                                        </h2>
                                    </div>
                                    <p
                                        class="text-slate-400 leading-relaxed max-w-2xl"
                                    >
                                        Generate your provisional citizen
                                        identification card for the transitional
                                        period. This digital ID will serve as
                                        your temporary credential during the
                                        integration process.
                                    </p>
                                </div>
                                <div
                                    class="flex items-center gap-2 px-4 py-2 bg-liberation-blue/20 border border-liberation-blue/30 rounded-full"
                                >
                                    <span
                                        class="w-2 h-2 rounded-full bg-liberation-blue animate-pulse"
                                    ></span>
                                    <span
                                        class="text-xs font-mono text-liberation-blue uppercase"
                                        >Live</span
                                    >
                                </div>
                            </div>

                            <div
                                class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-6"
                            >
                                <div class="flex items-center gap-3 text-sm">
                                    <svg
                                        class="w-5 h-5 text-liberation-blue flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span class="text-slate-300"
                                        >QR Code Enabled</span
                                    >
                                </div>
                                <div class="flex items-center gap-3 text-sm">
                                    <svg
                                        class="w-5 h-5 text-liberation-blue flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                    <span class="text-slate-300"
                                        >Photo Upload</span
                                    >
                                </div>
                                <div class="flex items-center gap-3 text-sm">
                                    <svg
                                        class="w-5 h-5 text-liberation-blue flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"
                                        ></path>
                                    </svg>
                                    <span class="text-slate-300"
                                        >Instant Download</span
                                    >
                                </div>
                            </div>
                        </div>

                        <div class="p-6 md:p-8">
                            <IdGenerator client:only="react" />
                        </div>
                    </div>
                </section>

                <!-- Asset Calculator Section -->
                <section class="relative">
                    <div
                        class="absolute -left-4 top-0 bottom-0 w-1 bg-gradient-to-b from-green-500 to-transparent rounded-full"
                    >
                    </div>

                    <div
                        class="bg-slate-800/30 border border-slate-700 rounded-2xl overflow-hidden hover:border-green-500/50 transition-all"
                    >
                        <div
                            class="bg-gradient-to-r from-green-500/10 to-transparent p-6 md:p-8 border-b border-slate-700"
                        >
                            <div
                                class="flex items-start justify-between flex-wrap gap-4"
                            >
                                <div>
                                    <div class="flex items-center gap-3 mb-3">
                                        <span
                                            class="bg-green-600 text-white w-10 h-10 rounded-lg flex items-center justify-center text-lg font-bold font-mono shadow-lg"
                                        >
                                            02
                                        </span>
                                        <h2
                                            class="text-3xl font-bold text-white"
                                        >
                                            Asset Re-evaluation
                                        </h2>
                                    </div>
                                    <p
                                        class="text-slate-400 leading-relaxed max-w-2xl"
                                    >
                                        Calculate your estimated net worth
                                        adjustment under the new economic zone
                                        policies. Understand how your assets
                                        will be valued in the integrated market.
                                    </p>
                                </div>
                                <div
                                    class="flex items-center gap-2 px-4 py-2 bg-green-500/20 border border-green-500/30 rounded-full"
                                >
                                    <span
                                        class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                                    ></span>
                                    <span
                                        class="text-xs font-mono text-green-400 uppercase"
                                        >Beta</span
                                    >
                                </div>
                            </div>

                            <div
                                class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-6"
                            >
                                <div class="flex items-center gap-3 text-sm">
                                    <svg
                                        class="w-5 h-5 text-green-500 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span class="text-slate-300"
                                        >Multi-Currency</span
                                    >
                                </div>
                                <div class="flex items-center gap-3 text-sm">
                                    <svg
                                        class="w-5 h-5 text-green-500 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                                        ></path>
                                    </svg>
                                    <span class="text-slate-300"
                                        >Real-time Rates</span
                                    >
                                </div>
                                <div class="flex items-center gap-3 text-sm">
                                    <svg
                                        class="w-5 h-5 text-green-500 flex-shrink-0"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                    <span class="text-slate-300"
                                        >Tax Estimates</span
                                    >
                                </div>
                            </div>
                        </div>

                        <div class="p-6 md:p-8">
                            <div class="max-w-2xl mx-auto">
                                <AssetCalculator client:only="react" />
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <!-- Call to Action -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
            <div
                class="bg-gradient-to-r from-slate-800 to-slate-800/50 border border-slate-700 rounded-2xl p-8 md:p-12 text-center"
            >
                <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">
                    Need Additional Assistance?
                </h3>
                <p class="text-slate-400 mb-8 max-w-2xl mx-auto">
                    Our transitional support team is available 24/7 to help you
                    navigate the integration process.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/about"
                        class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white font-semibold rounded-lg transition-all"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            ></path>
                        </svg>
                        Learn More
                    </a>
                    <a
                        href="/#command-center"
                        class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-liberation-blue hover:bg-blue-600 text-white font-semibold rounded-lg transition-all shadow-lg shadow-blue-900/30"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"
                            ></path>
                        </svg>
                        Cast Your Vote
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>
