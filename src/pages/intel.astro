---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="py-20 px-4">
        <div class="max-w-7xl mx-auto">
            <h1 class="text-4xl font-bold text-white mb-10 text-center">
                Strategic Intelligence
            </h1>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Loop placeholder -->
                {
                    [1, 2, 3].map((i) => (
                        <article class="bg-slate-900 border border-slate-800 rounded-lg overflow-hidden hover:border-liberation-blue transition-colors">
                            <div class="h-48 bg-slate-800 relative">
                                <span class="absolute top-4 left-4 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
                                    RESTRICTED
                                </span>
                            </div>
                            <div class="p-6">
                                <h2 class="text-xl font-bold text-white mb-2">
                                    The Economic Impact of Melting Ice
                                    (Redacted)
                                </h2>
                                <p class="text-slate-400 text-sm mb-4">
                                    Analysis of the new shipping lanes and what
                                    they mean for your commute.
                                </p>
                                <a
                                    href="#"
                                    class="text-liberation-blue font-bold text-sm hover:underline"
                                >
                                    Read Briefing &rarr;
                                </a>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </div>
</Layout>
