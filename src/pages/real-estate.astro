---
import Layout from "../layouts/Layout.astro";

const properties = [
  {
    id: 1,
    title: 'Strategic Iceberg Manor',
    price: '$450,000',
    location: 'Nuuk Outskirts (Zone A)',
    type: 'Residential / Bunker',
    image: 'https://images.unsplash.com/photo-1548504769-900b70ed122e?auto=format&fit=crop&q=80&w=800',
    features: ['Ocean View', 'Melting Risk: Low', 'Polar Bear Fencing']
  },
  {
    id: 2,
    title: 'Prime Tundra Development Lot',
    price: '$1,200,000',
    location: 'Thule Air Base Vicinity',
    type: 'Commercial',
    image: 'https://images.unsplash.com/photo-1476514525535-07fb3b4ae5f1?auto=format&fit=crop&q=80&w=800',
    features: ['5G Covered', 'Permafrost Foundation', 'No Zoning Laws']
  },
  {
    id: 3,
    title: 'Geothermal Igloo Complex',
    price: '$850,000',
    location: 'Disko Bay',
    type: 'Multi-Family',
    image: 'https://images.unsplash.com/photo-1518182170546-07fb3b4ae5f1?auto=format&fit=crop&q=80&w=800', // Placeholder
    features: ['Natural Heating', 'Aurora Borealis Skylight', 'Tax Haven Status']
  }
];
---

<Layout title="Real Estate | Project 51">
  <div class="py-12 bg-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">Greenland Real Estate Exchange</h1>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Secure your slice of the 51st state before the inevitable market boom. 
          <span class="text-liberation-blue font-bold">Invest early, freeze assets later.</span>
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {properties.map(property => (
          <div class="bg-slate-800 rounded-lg overflow-hidden border border-slate-700 hover:border-liberation-blue transition-colors group">
            <div class="h-48 bg-slate-700 relative overflow-hidden">
               <!-- Placeholder for actual images -->
               <div class="absolute inset-0 bg-slate-600 animate-pulse flex items-center justify-center text-slate-500">
                  Thinking of {property.title}...
               </div>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-2">
                <span class="text-xs font-mono text-liberation-blue px-2 py-1 bg-liberation-blue/10 rounded uppercase">{property.type}</span>
                <span class="text-white font-bold">{property.price}</span>
              </div>
              <h3 class="text-xl font-bold text-white mb-1 group-hover:text-liberation-blue transition-colors">{property.title}</h3>
              <p class="text-sm text-slate-400 mb-4">{property.location}</p>
              
              <div class="border-t border-slate-700 pt-4">
                <ul class="text-xs text-slate-500 space-y-1">
                  {property.features.map(feature => (
                    <li class="flex items-center">
                      <svg class="w-3 h-3 text-green-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
              
              <button class="w-full mt-6 py-2 bg-slate-700 hover:bg-liberation-blue text-white text-sm font-bold rounded transition-colors">
                Schedule Viewing
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>
