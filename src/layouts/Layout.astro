---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Global CSS Import -->
		<style is:global>
			@import "../styles/global.css";
		</style>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;700&family=Inter:wght@400;600;800&display=swap"
			rel="stylesheet"
		/>
		<title>Project 51 | The Greenland Initiative</title>
		<meta
			name="description"
			content="Official preparation committee for the 51st State Initiative."
		/>
	</head>
	<body
		class="bg-slate-900 text-slate-50 font-sans antialiased selection:bg-liberation-blue selection:text-white flex flex-col min-h-screen"
	>
		<Navbar />
		<main class="flex-grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<script>
	// Global client-side logic can go here if needed
</script>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
